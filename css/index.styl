$blue = #9cf

html
  font: 14px Roboto, "Helvetica Neue", sans-serif

body
  margin: 0

  > .page
    > .page-nav
      display: none

    > .page-subpages > .page
      &.inactive
        display: none

      header
        background: $blue
        color: #fff
        padding: 10px 25px
        text-shadow: 0 1px 1px rgba(#000, 0.25)

        h1
          font-size: 30px
          font-weight: lighter

      .content
        padding: 10px 25px

      .action
        text-align: center

        .next
          background: #666
          border-radius: 5px
          color: #fff
          display: inline-block
          font-size: 20px
          padding: 10px 40px
          text-decoration: none
          text-shadow: 0 1px 1px rgba(#000, 0.75)

#map-canvas
  height: 1136px
  width: 640px

@import "./fancy-checkbox"
